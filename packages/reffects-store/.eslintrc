{
  "extends": ["airbnb/base", "prettier"],
  "env": {
    "jest": true
  },
  "plugins": ["jest", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "impliedStrict": true,
      "classes": true
    }
  },
  "rules": {
    "no-console": 2,
    "no-param-reassign": 0,
    "no-restricted-syntax": 0,
    "no-return-assign": 0,
    "no-use-before-define": 0,
    "no-plusplus": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 80
      }
    ]
  }
}
